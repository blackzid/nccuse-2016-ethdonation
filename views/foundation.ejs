  <body >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <!-- Navigation -->
    <nav>
      <ul class="w3-navbar w3-red">
        <h4 style="float:left"><i>Welcome to EthDontate</i></h4>
        
        <li style="float:right"><a href="/member" >Member</a></li>
        <li style="float:right"><a href="/foundation">Donate</a></li>
